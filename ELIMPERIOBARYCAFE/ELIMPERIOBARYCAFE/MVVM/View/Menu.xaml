<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ELIMPERIOBARYCAFE.MVVM.View.Menu"
             Title="Menu"
             BackgroundColor="#F4F4F4">

    
    <ScrollView>
        <Grid Padding="10"
              RowSpacing="10"
              ColumnSpacing="10"
              BackgroundColor="#F4F4F4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

             <!--Tarjeta 1--> 
            <Frame Grid.Row="0" Grid.Column="0"
                   BackgroundColor="DarkGray"
                   CornerRadius="15"
                   Padding="10">
                <VerticalStackLayout Spacing="5">
                    <Image Source="medicina.png" WidthRequest="40" HeightRequest="40" />
                    <Label Text="Usuarios"
                           TextColor="White"
                           FontSize="Medium"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

             <!--Tarjeta 2--> 
            <Frame Grid.Row="0" Grid.Column="1"
                   BackgroundColor="DarkGray"
                   CornerRadius="15"
                   Padding="10">
                <VerticalStackLayout Spacing="5">
                    <Image Source="consulta.png" WidthRequest="40" HeightRequest="40" />
                    <Label Text="Proveedores"
                           TextColor="White"
                           FontSize="Medium"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

             <!--Tarjeta 3--> 
            <Frame Grid.Row="2" Grid.Column="0"
                   BackgroundColor="DarkGray"
                   CornerRadius="15"
                   Padding="10">
                <VerticalStackLayout Spacing="5">
                    <Image Source="hogar.png" WidthRequest="40" HeightRequest="40" />
                    <!-- Botón de Inicio -->
                    <Button Text="Ventas"
                        FontSize="14"
                        BackgroundColor="White"
                        TextColor="#373B44" 
                        CornerRadius="20"
                        HorizontalOptions="Center"
                        Margin="0,30,0,0" 
                        Clicked="OnMeseroClicked"/>
                </VerticalStackLayout>
            </Frame>

             <!--Tarjeta 4--> 
            <Frame Grid.Row="2" Grid.Column="1"
                   BackgroundColor="DarkGray"
                   CornerRadius="15"
                   Padding="10">
                <VerticalStackLayout Spacing="5">
                    <Image Source="llamada.png" WidthRequest="40" HeightRequest="40" />
                    <Label Text="Llamada"
                           TextColor="White"
                           FontSize="Medium"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

             <!--Tarjeta 5--> 
            <Frame Grid.Row="4" Grid.Column="0"
                   BackgroundColor="DarkGray"
                   CornerRadius="15"
                   Padding="10">
                <VerticalStackLayout Spacing="5">
                    <Image Source="info.png" WidthRequest="40" HeightRequest="40" />
                    <Label Text="Información"
                           TextColor="White"
                           FontSize="Medium"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

             <!--Tarjeta 6--> 
            <Frame Grid.Row="4" Grid.Column="1"
                   BackgroundColor="DarkGray"
                   CornerRadius="15"
                   Padding="10">
                <VerticalStackLayout Spacing="5">
                    <Image Source="dientes.png" WidthRequest="40" HeightRequest="40" />
                    <Label Text="Dentista"
                           TextColor="White"
                           FontSize="Medium"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>






